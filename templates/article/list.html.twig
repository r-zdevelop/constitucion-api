{% extends 'base.html.twig' %}

{% block title %}Artículos - {{ parent() }}{% endblock %}

{% block body %}
{# Main Container - Mobile First #}
<div class="bg-white rounded-2xl shadow-2xl p-4 sm:p-6 md:p-8 lg:p-10 w-full max-w-7xl mx-auto">

    {# Back to Home Link #}
    <div class="mb-6 sm:mb-8">
        <a
            href="{{ path('app_home') }}"
            class="text-blue-800 hover:text-blue-950 font-bold inline-flex items-center gap-2 transition-colors duration-200"
        >
            <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Regresar al Inicio
        </a>
    </div>

    {# Page Title #}
    <h1 class="text-blue-900 text-2xl sm:text-3xl md:text-4xl font-bold mb-6 sm:mb-8">
        Lista de Artículos
    </h1>

    {# Keyword Search Section #}
    <div class="bg-gradient-to-r from-green-50 to-emerald-50 rounded-lg p-4 sm:p-6 mb-6 sm:mb-8 border-2 border-green-200">
        <form method="get" action="{{ path('app_articles_list') }}" class="space-y-4">
            <div class="flex flex-col sm:flex-row gap-4">
                {# Search Input #}
                <div class="flex-1">
                    <label
                        for="keyword-search"
                        class="block mb-2 font-bold text-gray-900 text-sm sm:text-base"
                    >
                        Buscar por Palabra Clave:
                    </label>
                    <div class="relative">
                        <input
                            type="text"
                            id="keyword-search"
                            name="search"
                            value="{{ searchTerm }}"
                            placeholder="Ej: derechos, libertad, constitución..."
                            minlength="2"
                            class="w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg bg-white
                                   text-gray-700 focus:ring-2 focus:ring-green-500 focus:border-green-500
                                   transition-all duration-200
                                   text-sm sm:text-base"
                        >
                        {# Search Icon #}
                        <svg
                            class="absolute right-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400 pointer-events-none"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                    </div>
                    <p class="text-xs sm:text-sm text-gray-600 mt-1">
                        Mínimo 2 caracteres. Busca en títulos y contenido.
                    </p>
                </div>

                {# Search & Clear Buttons #}
                <div class="sm:pt-7 flex gap-2">
                    <button
                        type="submit"
                        class="flex-1 sm:flex-none sm:w-auto bg-green-700 text-white font-bold
                               px-6 py-3 rounded-lg shadow-md
                               hover:bg-green-800 hover:shadow-lg hover:-translate-y-0.5
                               transition-all duration-200
                               focus:outline-none focus:ring-4 focus:ring-green-300
                               text-sm sm:text-base"
                    >
                        Buscar
                    </button>
                    {% if searchTerm %}
                        <a
                            href="{{ path('app_articles_list') }}"
                            class="flex-1 sm:flex-none sm:w-auto bg-gray-200 text-gray-700 font-bold
                                   px-6 py-3 rounded-lg shadow-md text-center
                                   hover:bg-gray-300 hover:shadow-lg hover:-translate-y-0.5
                                   transition-all duration-200
                                   focus:outline-none focus:ring-4 focus:ring-gray-300
                                   text-sm sm:text-base"
                        >
                            Limpiar
                        </a>
                    {% endif %}
                </div>
            </div>

            {# Search Results Info #}
            {% if searchTerm %}
                <div class="bg-green-100 border-l-4 border-green-500 p-3 sm:p-4 rounded">
                    <p class="text-green-800 font-medium text-sm sm:text-base">
                        Resultados para "<strong>{{ searchTerm }}</strong>":
                        <strong>{{ pagination.total }}</strong> artículo{{ pagination.total > 1 ? 's' : '' }} encontrado{{ pagination.total > 1 ? 's' : '' }}
                    </p>
                </div>
            {% endif %}
        </form>
    </div>

    {# Search by Article Number Section - Stimulus Controller #}
    <div
        class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg p-4 sm:p-6 mb-6 sm:mb-8 border-2 border-blue-200"
        data-controller="article-search"
        data-article-search-url-value="{{ path('api_articles_search_by_number') }}"
    >
        <div class="flex flex-col sm:flex-row gap-4">
            {# Search Input #}
            <div class="flex-1">
                <label
                    for="article-number-search"
                    class="block mb-2 font-bold text-gray-900 text-sm sm:text-base"
                >
                    Buscar por Número de Artículo:
                </label>
                <div class="relative">
                    <input
                        type="number"
                        id="article-number-search"
                        min="1"
                        placeholder="Ej: 19"
                        class="w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg bg-white
                               text-gray-700 focus:ring-2 focus:ring-blue-500 focus:border-blue-500
                               transition-all duration-200
                               text-sm sm:text-base"
                        data-article-search-target="input"
                    >
                    {# Search Icon #}
                    <svg
                        class="absolute right-4 top-1/2 -translate-y-1/2 w-5 h-5 flex-shrink-0 text-gray-400 pointer-events-none"
                        width="20"
                        height="20"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                </div>
            </div>

            {# Search & Clear Buttons #}
            <div class="sm:pt-7 flex gap-2">
                <button
                    class="flex-1 sm:flex-none sm:w-auto bg-blue-700 text-white font-bold
                           px-6 py-3 rounded-lg shadow-md
                           hover:bg-blue-800 hover:shadow-lg hover:-translate-y-0.5
                           transition-all duration-200
                           focus:outline-none focus:ring-4 focus:ring-blue-300
                           text-sm sm:text-base
                           disabled:opacity-50 disabled:cursor-not-allowed"
                    data-article-search-target="button"
                    data-action="click->article-search#search"
                >
                    Buscar
                </button>
                <button
                    type="button"
                    class="flex-1 sm:flex-none sm:w-auto bg-gray-200 text-gray-700 font-bold
                           px-6 py-3 rounded-lg shadow-md
                           hover:bg-gray-300 hover:shadow-lg hover:-translate-y-0.5
                           transition-all duration-200
                           focus:outline-none focus:ring-4 focus:ring-gray-300
                           text-sm sm:text-base
                           disabled:opacity-50 disabled:cursor-not-allowed hidden"
                    data-article-search-target="clearButton"
                    data-action="click->article-search#clear"
                >
                    Limpiar
                </button>
            </div>
        </div>

        {# Search Results Container #}
        <div data-article-search-target="results" class="mt-6 hidden">
            {# Results will be injected here by JavaScript #}
        </div>

        {# Loading Indicator #}
        <div data-article-search-target="loading" class="mt-6 hidden text-center">
            <div class="inline-block animate-spin rounded-full h-8 w-8 border-4 border-blue-500 border-t-transparent"></div>
            <p class="text-gray-700 mt-2 font-medium">Buscando...</p>
        </div>

        {# Error Message #}
        <div data-article-search-target="error" class="mt-6 hidden bg-red-50 border-l-4 border-red-400 p-4 rounded">
            <p class="text-red-800 font-medium"></p>
        </div>
    </div>

    {# Chapter Filter Section - Only show when NOT searching by keyword #}
    {% if allChapters is not empty and not searchTerm %}
        <div class="bg-gray-50 rounded-lg p-4 sm:p-6 mb-6 sm:mb-8">
            <form method="get" action="{{ path('app_articles_list') }}" class="space-y-4">
                <div class="flex flex-col sm:flex-row gap-4 sm:items-end">
                    {# Filter Dropdown #}
                    <div class="flex-1">
                        <label
                            for="chapter-filter"
                            class="block mb-2 font-bold text-gray-900 text-sm sm:text-base"
                        >
                            Filtrar por Capítulo:
                        </label>
                        <select
                            id="chapter-filter"
                            name="chapter"
                            onchange="this.form.submit()"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg bg-white
                                   text-gray-700 focus:ring-2 focus:ring-blue-500 focus:border-blue-500
                                   cursor-pointer transition-all duration-200
                                   text-sm sm:text-base"
                        >
                            <option value="">Todos los capítulos</option>
                            {% for chapter in allChapters %}
                                <option value="{{ chapter }}" {% if selectedChapter == chapter %}selected{% endif %}>
                                    {{ chapter }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>

                    {# Clear Filter Button #}
                    {% if selectedChapter %}
                        <a
                            href="{{ path('app_articles_list') }}"
                            class="inline-block bg-white text-blue-800 font-bold
                                   px-6 py-3 rounded-lg shadow-md
                                   hover:shadow-lg hover:-translate-y-0.5
                                   transition-all duration-200
                                   text-center text-sm sm:text-base
                                   border-2 border-blue-300"
                        >
                            Limpiar Filtro
                        </a>
                    {% endif %}
                </div>

                {# Statistics #}
                <div class="text-gray-800 text-sm sm:text-base font-medium">
                    {% if selectedChapter %}
                        Página actual: <strong class="text-blue-900 font-bold">{{ pagination.items|length }}</strong>
                        artículo{{ pagination.items|length > 1 ? 's' : '' }}
                        | Total en <strong class="text-blue-900 font-bold">{{ selectedChapter }}</strong>:
                        <strong class="text-blue-900 font-bold">{{ pagination.total }}</strong>
                        artículo{{ pagination.total > 1 ? 's' : '' }}
                    {% else %}
                        Total: <strong class="text-blue-900 font-bold">{{ pagination.total }}</strong>
                        artículo{{ pagination.total > 1 ? 's' : '' }}
                        en <strong class="text-blue-900 font-bold">{{ allChapters|length }}</strong>
                        capítulo{{ allChapters|length > 1 ? 's' : '' }}
                    {% endif %}
                </div>
            </form>
        </div>
    {% endif %}

    {# Empty State #}
    {% if articles is empty %}
        <div class="bg-gray-50 rounded-lg p-6 sm:p-8 md:p-12 text-center">
            <svg class="w-16 h-16 sm:w-20 sm:h-20 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <p class="text-gray-800 text-lg sm:text-xl mb-2 font-semibold">
                {% if selectedChapter %}
                    No se encontraron artículos en el capítulo "{{ selectedChapter }}".
                {% else %}
                    No se encontraron artículos.
                {% endif %}
            </p>
            {% if not selectedChapter %}
                <p class="text-gray-700 text-sm sm:text-base mt-4 font-medium">
                    Importa artículos usando el comando:
                    <code class="bg-gray-300 px-2 py-1 rounded text-xs sm:text-sm font-mono font-bold text-gray-900">
                        bin/console app:import-constitution
                    </code>
                </p>
            {% endif %}
        </div>

    {# Articles Grouped by Chapter #}
    {% else %}
        <div class="space-y-6 sm:space-y-8">
            {% for chapterName, chapterArticles in articlesByChapter %}
                <div class="border-2 border-blue-200 rounded-lg overflow-hidden">
                    {# Chapter Header #}
                    <div class="bg-gradient-to-r from-blue-800 to-blue-600 text-white p-4 sm:p-6">
                        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
                            <h2 class="text-xl sm:text-2xl font-bold">{{ chapterName }}</h2>
                            <span class="text-sm sm:text-base opacity-90 font-medium">
                                {{ chapterArticles|length }} artículo{{ chapterArticles|length > 1 ? 's' : '' }}
                            </span>
                        </div>
                    </div>

                    {# Articles in Chapter #}
                    <div class="bg-white p-4 sm:p-6">
                        <div class="space-y-4">
                            {% for article in chapterArticles %}
                                <article class="border border-gray-200 rounded-lg p-4 sm:p-6 hover:shadow-md transition-shadow duration-200">
                                    {# Article Header #}
                                    <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-3 mb-4">
                                        <h3 class="text-blue-900 text-lg sm:text-xl font-bold">
                                            Artículo #{{ article.articleNumber }}
                                        </h3>
                                        <span class="inline-block bg-blue-800 text-white px-3 py-1 rounded-md text-xs sm:text-sm font-bold self-start">
                                            {{ article.status }}
                                        </span>
                                    </div>

                                    {# Article Title #}
                                    {% if article.title %}
                                        <h4 class="text-gray-900 font-bold mb-3 text-base sm:text-lg">
                                            {{ article.title }}
                                        </h4>
                                    {% endif %}

                                    {# Article Content #}
                                    <div class="text-gray-800 leading-relaxed mb-4 text-sm sm:text-base">
                                        {{ article.content }}
                                    </div>

                                    {# Article Notes #}
                                    {% if article.notes %}
                                        <div class="bg-yellow-50 border-l-4 border-yellow-400 p-3 sm:p-4 rounded text-sm sm:text-base">
                                            <p class="text-yellow-800">
                                                <strong class="font-semibold">Nota:</strong> {{ article.notes }}
                                            </p>
                                        </div>
                                    {% endif %}
                                </article>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {# Pagination Controls #}
        {% if pagination.pages > 1 %}
            <div class="mt-8 border-t-2 border-gray-200 pt-6">
                <nav class="flex flex-col sm:flex-row items-center justify-between gap-4" aria-label="Pagination">
                    {# Pagination Info #}
                    <div class="text-sm text-gray-700 font-medium">
                        Página <strong class="text-blue-900">{{ pagination.currentPage }}</strong>
                        de <strong class="text-blue-900">{{ pagination.pages }}</strong>
                        ({{ pagination.total }} artículo{{ pagination.total > 1 ? 's' : '' }})
                    </div>

                    {# Pagination Buttons #}
                    <div class="flex gap-2 flex-wrap justify-center">
                        {# Previous Button #}
                        {% if pagination.currentPage > 1 %}
                            <a
                                href="{{ path('app_articles_list', {
                                    page: pagination.currentPage - 1,
                                    search: searchTerm,
                                    chapter: selectedChapter
                                }) }}"
                                class="px-4 py-2 bg-blue-700 text-white rounded-lg font-bold
                                       hover:bg-blue-800 hover:shadow-lg hover:-translate-y-0.5
                                       transition-all duration-200
                                       text-sm sm:text-base"
                            >
                                ← Anterior
                            </a>
                        {% else %}
                            <span class="px-4 py-2 bg-gray-200 text-gray-500 rounded-lg font-bold cursor-not-allowed text-sm sm:text-base">
                                ← Anterior
                            </span>
                        {% endif %}

                        {# Page Numbers (Show max 7 pages: current +/- 3) #}
                        {% set startPage = max(1, pagination.currentPage - 3) %}
                        {% set endPage = min(pagination.pages, pagination.currentPage + 3) %}

                        {# First page link if not in range #}
                        {% if startPage > 1 %}
                            <a
                                href="{{ path('app_articles_list', {
                                    page: 1,
                                    search: searchTerm,
                                    chapter: selectedChapter
                                }) }}"
                                class="px-4 py-2 bg-white border-2 border-blue-300 text-blue-900 rounded-lg font-bold
                                       hover:bg-blue-50 hover:shadow-md hover:-translate-y-0.5
                                       transition-all duration-200
                                       text-sm sm:text-base"
                            >
                                1
                            </a>
                            {% if startPage > 2 %}
                                <span class="px-2 py-2 text-gray-500 font-bold">...</span>
                            {% endif %}
                        {% endif %}

                        {# Page number buttons #}
                        {% for pageNum in startPage..endPage %}
                            {% if pageNum == pagination.currentPage %}
                                <span class="px-4 py-2 bg-blue-900 text-white rounded-lg font-bold shadow-lg text-sm sm:text-base">
                                    {{ pageNum }}
                                </span>
                            {% else %}
                                <a
                                    href="{{ path('app_articles_list', {
                                        page: pageNum,
                                        search: searchTerm,
                                        chapter: selectedChapter
                                    }) }}"
                                    class="px-4 py-2 bg-white border-2 border-blue-300 text-blue-900 rounded-lg font-bold
                                           hover:bg-blue-50 hover:shadow-md hover:-translate-y-0.5
                                           transition-all duration-200
                                           text-sm sm:text-base"
                                >
                                    {{ pageNum }}
                                </a>
                            {% endif %}
                        {% endfor %}

                        {# Last page link if not in range #}
                        {% if endPage < pagination.pages %}
                            {% if endPage < pagination.pages - 1 %}
                                <span class="px-2 py-2 text-gray-500 font-bold">...</span>
                            {% endif %}
                            <a
                                href="{{ path('app_articles_list', {
                                    page: pagination.pages,
                                    search: searchTerm,
                                    chapter: selectedChapter
                                }) }}"
                                class="px-4 py-2 bg-white border-2 border-blue-300 text-blue-900 rounded-lg font-bold
                                       hover:bg-blue-50 hover:shadow-md hover:-translate-y-0.5
                                       transition-all duration-200
                                       text-sm sm:text-base"
                            >
                                {{ pagination.pages }}
                            </a>
                        {% endif %}

                        {# Next Button #}
                        {% if pagination.currentPage < pagination.pages %}
                            <a
                                href="{{ path('app_articles_list', {
                                    page: pagination.currentPage + 1,
                                    search: searchTerm,
                                    chapter: selectedChapter
                                }) }}"
                                class="px-4 py-2 bg-blue-700 text-white rounded-lg font-bold
                                       hover:bg-blue-800 hover:shadow-lg hover:-translate-y-0.5
                                       transition-all duration-200
                                       text-sm sm:text-base"
                            >
                                Siguiente →
                            </a>
                        {% else %}
                            <span class="px-4 py-2 bg-gray-200 text-gray-500 rounded-lg font-bold cursor-not-allowed text-sm sm:text-base">
                                Siguiente →
                            </span>
                        {% endif %}
                    </div>
                </nav>
            </div>
        {% endif %}
    {% endif %}
</div>
{% endblock %}
