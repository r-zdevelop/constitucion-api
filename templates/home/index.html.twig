{% extends 'base.html.twig' %}

{% block title %}Home - {{ parent() }}{% endblock %}

{% block body %}
{# Card with mobile-first responsive design #}
<div class="bg-white rounded-2xl shadow-2xl p-6 sm:p-8 md:p-12 max-w-2xl mx-auto">
    <div class="text-center">
        {# Project Title - Responsive font sizes #}
        <h1 class="text-indigo-600 text-3xl sm:text-4xl md:text-5xl font-bold mb-4 sm:mb-6">
            {{ project_name }}
        </h1>

        {# Project Description #}
        <p class="text-gray-600 text-base sm:text-lg md:text-xl mb-6 sm:mb-8">
            {{ project_description }}
        </p>

        {# CTA Button - Mobile-first responsive #}
        <a
            href="{{ path('app_articles_list') }}"
            class="inline-block bg-white text-indigo-600 font-semibold
                   px-6 py-3 sm:px-8 sm:py-4
                   rounded-lg shadow-lg
                   hover:shadow-xl hover:-translate-y-0.5
                   transition-all duration-300 ease-in-out
                   focus:outline-none focus:ring-4 focus:ring-indigo-300
                   text-base sm:text-lg"
        >
            View Articles
        </a>
    </div>
</div>
{% endblock %}
